@{
}

@model IEnumerable<BarApp.Models.Order>

<h2>Order Queue</h2>
<table>
    <thead>
        <tr>
            <th>Customer</th>
            <th>Cocktail</th>
            <th>Quantity</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.CustomerName</td>
                <td>@order.Cocktail.Name</td>
                <td>@order.Quantity</td>
                <td>@order.OrderStatus</td>
            </tr>
        }
    </tbody>
</table>