@{
}
@model IEnumerable<BarApp.Models.Cocktail>

<h2>Our Cocktails</h2>
<ul>
    @foreach (var cocktail in Model)
    {
        <li>
            @cocktail.Name - @cocktail.Price
            <a href="@Url.Action("PlaceOrder", "Order", new { id = cocktail.CocktailId })">Order</a>
        </li>
    }
</ul>